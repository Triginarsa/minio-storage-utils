{
    "name": "triginarsa/minio-storage-utils",
    "description": "Secure file handler for minIO object storage with image, video processing and security scanning.",
    "type": "library",
    "keywords": ["minio", "storage", "s3", "image", "video", "security", "upload", "laravel", "ffmpeg"],
    "require": {
        "php": "^8.1",
        "league/flysystem-aws-s3-v3": "^3.29",
        "intervention/image": "^3.11",
        "monolog/monolog": "^3.9",
        "aws/aws-sdk-php": "^3.0",
        "psr/log": "^3.0",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/filesystem": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "php-ffmpeg/php-ffmpeg": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6",
        "symfony/var-dumper": "^6.0|^7.0"
    },
    "suggest": {
        "ext-ffmpeg": "Required for video processing features"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Triginarsa\\MinioStorageUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Triginarsa\\MinioStorageUtils\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "triginarsa",
            "email": "mankadi123@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Triginarsa\\MinioStorageUtils\\Laravel\\MinioStorageServiceProvider"
            ],
            "aliases": {
                "MinioStorage": "Triginarsa\\MinioStorageUtils\\Laravel\\Facades\\MinioStorage"
            }
        }
    }
}
